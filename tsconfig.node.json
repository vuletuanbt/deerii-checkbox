{
  "compilerOptions": {
    /* Essential */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,

    /* Important */
    "composite": true,
    "lib": ["ES2023"],
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Other */
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}
