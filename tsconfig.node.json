{
  "compilerOptions": {
    /* Essential */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    /* Important */
    "composite": true,
    "lib": ["ESNext"],
    "isolatedModules": true,
    "moduleDetection": "force",
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Other */
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"]
}
